{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	| Profil
{% endblock %}

{% block h1 %}
	{{parent()}}
	| Profil de
	{{ app.user.prenom }}
{% endblock %}

{% block body %}

	{% include "inc/_flash.html.twig" %}

	<div class="container border rounded p-3">
		<p>Prénom :
			{{app.user.prenom}}
		</p>
		<p>Nom :
			{{app.user.nom}}
		</p>
		<p>Email :
			{{app.user.email}}
		</p>
		<p>Pseudo :
			{{app.user.pseudo}}
		</p>
		<p>Date d'ínscription :
			{{app.user.createdAt | date('d/m/Y')}}
		</p>
		<a href="{{path('app_profile_edit')}}" class="btn btn-warning my-2">Modifier profil</a>
		<hr class="mb-3">
		<h3 class="mb-3">
			Commandes :
		</h3>
		<table class="table">
			<thead>
				<tr>
					<th>#</th>
					<th>Chambre</th>
					<th>Date de début de réservation</th>
					<th>Date de fin de réservation</th>
					<th>Prix Total</th>
					<th>Date de création</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for commande in app.user.commandes %}
					<tr>
						<td>{{ loop.index }}</td>
						<td>{{ commande.chambre.titre }}</td>
						<td>{{ commande.startAt|date('d/m/Y - H') }}h</td>
						<td>{{ commande.endAt|date('d/m/Y - H') }}h</td>
						<td>{{ commande.prix }}
							€</td>
						<td>{{ commande.createdAt ? commande.createdAt|date('d/m/Y H:i:s') : '' }}</td>
						<td>
             <p><a href="{{ path('app_profile_commande_edit', {'id': commande.id}) }}" class="btn btn-success mx-1">Modifier</a></p>
             <p>{{ include('profile/commande/_delete_form.html.twig') }}</p>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">Pas de commandes à venir</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
