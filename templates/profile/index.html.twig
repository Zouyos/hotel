{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	| Profil
{% endblock %}

{% block h1 %}
	{{parent()}}
	| Profil de
	{{ app.user.prenom }}
{% endblock %}

{% block body %}

{% include "inc/_flash.html.twig" %}

	<div class="container border rounded p-3">
		<p>Prénom :
			{{app.user.prenom}}
		</p>
		<p>Nom :
			{{app.user.nom}}
		</p>
		<p>Email :
			{{app.user.email}}
		</p>
		<p>Pseudo :
			{{app.user.pseudo}}
		</p>
		<p>Date d'ínscription :
			{{app.user.createdAt | date('d/m/Y')}}
		</p>
    <div class="my-3">
		<h3>
			Commandes :
		</h3>
			<p></p>
		</div>
		<hr class="my-3">
		<a href="{{path('app_profile_edit')}}" class="btn btn-warning mb-3">Modifier profil</a>
	</div>

{% endblock %}
