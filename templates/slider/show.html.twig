{% extends 'base.html.twig' %}

{% block title %}Slider
{% endblock %}

{% block body %}
	<h1>Slider</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ slider.id }}</td>
			</tr>
			<tr>
				<th>Ordre</th>
				<td>{{ slider.ordre }}</td>
			</tr>
			<tr>
				<th>Statut</th>
				{% if slider.status %}
					<td>{{ slider.status }}</td>
				{% else %}
					<td>Inactif</td>
				{% endif %}
			</tr>
			<tr>
				<th>Photo</th>
				<td><img src="{{ slider.photo }}"></td>
			</tr>
			<tr>
				<th>Texte Alternatif</th>
				<td>{{ slider.alt }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ slider.title }}</td>
			</tr>
			<tr>
				<th>Caption</th>
				<td>{{ slider.caption }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ slider.description }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ slider.createdAt ? slider.createdAt|date('d-m-Y H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_slider_edit', {'id': slider.id}) }}">edit</a>

	{{ include('slider/_delete_form.html.twig') }}

	<a href="{{ path('app_slider_index') }}">back to list</a>
{% endblock %}
