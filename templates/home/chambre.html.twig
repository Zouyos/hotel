{% extends "base.html.twig" %}

{% block h1 %}
	{{chambre.titre}}
{% endblock %}

{% block body %}

	<div class="container border rounded mx-auto my-4 p-3">
		<div>
			{% if chambre.photo %}
				<img src="{{chambre.photo}}" alt="Chambre" class="img-fluid w-100">
			{% else %}
				<img src="{{asset('images/default.jpg')}}" alt="Chambre" class="img-fluid w-100">
			{% endif %}
		</div>
		<p class="my-3">{{chambre.descriptionLongue}}</p>
		<h4 class="mb-2">Prix à la nuit :
			<span class="text-primary">{{chambre.prix}}
				€</span>
		</h4>
	</div>
	<div class="container mx-auto">
		<hr class="my-2">
	</div>
	<div class="container mx-auto my-1 p-3">
		<h3 class="text-decoration-underline">Réserver cette chambre :</h3>
		{% if app.user %}
			{{form_start(form)}}
			{{form_widget(form)}}
			<input type="submit" value="Réserver" class="btn btn-primary col-12 my-3">
			{{form_end(form)}}
		{% else %}
			<h5 class="fst-italic text-strong text-secondary my-2">Veuillez vous connecter pour réserver cette chambre.</h5>
		{% endif %}
	</div>

{% endblock %}
